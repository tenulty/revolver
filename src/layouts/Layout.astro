---
import "../styles/global.css";
import SpeedInsights from "@vercel/speed-insights/astro";
import Analytics from "@vercel/analytics/astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />

		<meta
			name="description"
			content="This is the official site of the Revolver Minecraft multiplayer server. Check out our mods and server status here!"
		/>
		<meta
			name="keywords"
			content="Minecraft, Revolver, SMP, Minecraft Server"
		/>
		<meta name="author" content="tenulty" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />

		<meta
			property="og:image"
			content="https://revolvermc.vercel.app/favicon.png"
		/>
		<meta property="og:site_name" content="MC Revolver" />
		<meta property="og:title" content="Minecraft: Revolver Mode" />
		<meta
			property="og:description"
			content="This is the official site of the Revolver Minecraft multiplayer server. Check out our mods and server status here!"
		/>
		<meta property="og:url" content="https://revolvermc.vercel.app" />

		<meta name="generator" content={Astro.generator} />

		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="icon" type="image/png" href="/favicon.png" />

		<title>Revolver MC</title>

		<style is:global>
			@font-face {
				font-family: "Minecraft";
				src: url("/fonts/MinecraftDefault-Regular.ttf") format("truetype");
				font-weight: normal;
				font-style: normal;
				font-display: swap;
			}

			html,
			body {
				margin: 0;
				width: 100%;
				height: 100%;
				image-rendering: pixelated;
				font-family: "Minecraft", monospace;
				color: white;
			}

			body {
				background: url("/blocks/dirt-menu.webp");
				background-size: 1000px 562px;
				background-color: #1e150f;
			}
		</style>
	</head>
	<body>
		<Analytics />
		<SpeedInsights />

		<noscript class="absolute right-0 left-0 mx-auto w-fit">
			You don't have Javascript enabled. Some, or most functionality won't be
			available. What gives. &#62;:(
		</noscript>

		<slot />
	</body>
</html>
